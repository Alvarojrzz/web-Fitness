---
import { recetas } from "../data/recetas";
---

<section class="max-w-6xl mx-auto py-10 px-4">
  <h1 class="text-3xl font-bold text-center mb-6">
    Recetas Fitness
  </h1>

  <div class="grid md:grid-cols-3 gap-8">
    {recetas.map((receta) => (
      <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
        <img 
          src={receta.imagen} 
          alt={receta.titulo} 
          class="w-full h-52 object-cover transform group-hover:scale-105 transition-transform duration-300"
        />
        
        <div class="p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-2">{receta.titulo}</h2>
          <p class="text-gray-600 text-sm mb-4">{receta.descripcion}</p>
          
          <div class="bg-gradient-to-br from-gray-50 to-white p-5 rounded-xl border border-gray-100">
            <!--<h3 class="text-lg font-semibold text-gray-700 mb-4 flex items-center text-center">
              Información Nutricional
            </h3>-->
            
            <!-- Fila superior - Calorías -->
            <div class="mb-4 bg-orange-50 p-4 rounded-lg flex items-center">
              <div class="bg-orange-100 p-2 rounded-full mr-3">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
              </div>
              <div>
                <p class="text-xs font-semibold text-orange-600">Calorías</p>
                <p class="text-2xl font-bold text-gray-700">{receta.calories}</p>
              </div>
            </div>

            <!-- Fila inferior - 3 columnas -->
            <div class="grid grid-cols-3 gap-3">
              <!-- Proteínas -->
              <div class="bg-blue-50 p-3 rounded-lg text-center">
                <div class="bg-blue-100 w-max mx-auto p-2 rounded-full mb-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-blue-600">Proteínas</p>
                <p class="text-lg font-bold text-gray-700">{receta.proteina}</p>
              </div>

              <!-- Grasas -->
              <div class="bg-yellow-50 p-3 rounded-lg text-center">
                <div class="bg-yellow-100 w-max mx-auto p-2 rounded-full mb-2">
                  <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-yellow-600">Grasas</p>
                <p class="text-lg font-bold text-gray-700">{receta.grasas}</p>
              </div>

              <!-- Carbohidratos -->
              <div class="bg-green-50 p-3 rounded-lg text-center">
                <div class="bg-green-100 w-max mx-auto p-2 rounded-full mb-2">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                </div>
                <p class="text-xs font-semibold text-green-600">Carbs</p>
                <p class="text-lg font-bold text-gray-700">{receta.carbohidratos}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>